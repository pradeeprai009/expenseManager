<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:strokeColor="@color/coloroutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyr_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_background_section"
                android:orientation="horizontal"
                android:padding="5dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="serif-monospace"
                    android:text="@string/exp_name"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="RtlCompat" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@color/cardview_shadow_start_color" />

                <TextView
                    android:id="@+id/report_expname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1.5"
                    android:textAlignment="center"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:hint=""
                    android:textColor="#000000" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coloroutline" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_background_section"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="serif-monospace"
                    android:text="@string/Exp_type"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_shadow_start_color" />

                <TextView
                    android:id="@+id/report_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:layout_marginLeft="15dp"
                    android:textAlignment="center"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:hint=""
                    android:textColor="#000000" />
                <ImageView
                    android:id="@+id/down"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/down"/>
                <ImageView
                    android:id="@+id/upview"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/up"
                    />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/lyr_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloroutline" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_background_section"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="serif-monospace"
                        android:text="@string/Exp_date"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        tools:ignore="RtlCompat"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="1dp"
                        android:layout_marginLeft="32dp"
                        android:layout_height="match_parent"
                        android:background="@color/cardview_shadow_start_color" />

                    <TextView
                        android:id="@+id/report_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:fontFamily="serif-monospace"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="#000000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_background_section"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:text="Credit"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/cardview_shadow_start_color" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:hint="Cr"
                        android:textColor="#000000" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloroutline" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_background_section"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:fontFamily="serif-monospace"
                        android:text="Amount"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        tools:ignore="RtlCompat"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="55dp"
                        android:background="@color/cardview_shadow_start_color" />

                    <TextView
                        android:layout_width="12dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="2dp"
                        android:gravity="end"
                        android:hint="@string/indian_sy"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="textEnd"
                        android:textColorHint="#000000" />

                    <TextView
                        android:id="@+id/report_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.2"
                        android:fontFamily="serif-monospace"
                        android:gravity="center"
                        android:hint="999999"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/report_credit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight=".8"
                        android:fontFamily="serif-monospace"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:hint="Cr"
                        android:textColor="@color/GREEN" />

                    <TextView
                        android:id="@+id/report_debit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight=".8"
                        android:textStyle="bold"
                        android:fontFamily="serif-monospace"
                        android:gravity="start"
                        android:hint="DR"
                        android:textColor="@color/RED" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>