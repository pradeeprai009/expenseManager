<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/viewTYPE"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="serif-monospace"
        android:background="@drawable/style_background_section"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_exp_type_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:fontFamily="serif-monospace"
            android:text="ID"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/cardview_shadow_start_color" />

        <TextView
            android:id="@+id/view_exp_type_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/hint_name"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:textAlignment="center"
            android:textColor="#000000" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/cardview_shadow_start_color" />

        <TextView
            android:id="@+id/view_exp_type_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/hint_status"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/exp_type_edit"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/highlighter"
            android:text="Edit"
            android:textAlignment="center"
            android:textColor="#000000" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/cardview_shadow_start_color" />
        <ImageView
            android:id="@+id/exp_type_delete"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/recycle"
            android:text="Delete"
            android:textAlignment="center"
            android:textColor="#000000" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/listDivider" />
</RelativeLayout>