<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Expense Manager"
            android:fontFamily="serif-monospace"
            android:textAlignment="center"
            android:textColor="@color/button"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="serif-monospace"
            android:text="Single user Base. Based on your Monthly Expenses and Income"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Card Details no Card Pin"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Just to Manage your Regular Expense."
            android:textAlignment="center"
            android:fontFamily="serif-monospace"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Wasting Paper and write everything on this app watch it anywhere and anytime."
            android:textAlignment="center"
            android:fontFamily="serif-monospace"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            />
    </LinearLayout>

</RelativeLayout>