<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".Welcome.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/style_background_section"
        android:orientation="vertical">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/fb"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloroutline"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:fontFamily="cursive"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimary"
                         />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="Pradeep Kumar Rai"
                        android:textColor="@color/coloroutline"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloroutline"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Desigination"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:fontFamily="cursive"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="Jn.Android Developer"
                        android:textColor="@color/coloroutline"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloroutline"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Email ID"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="raipradeep009@gmail.com"
                        android:textColor="@color/coloroutline"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloroutline"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mobile No."
                        android:textAlignment="textEnd"
                        android:fontFamily="cursive"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="+91-7905307223"
                        android:textColor="@color/coloroutline"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloroutline"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Whatsapp No"
                        android:fontFamily="cursive"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="+91-7905307223"
                        android:textColor="@color/coloroutline"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/coloroutline"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/insta"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/instagram"
                        />
                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/facebook"
                        />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>